; small example from
; https://github.com/mir-ikbch/compl_coq/blob/8.5/test-suite/test.v

(define $op (app "*" $1 $2))

; (x * y) * (y * z) = y
(define $axioms-ikebuchi
  {(eql (op (op x y) (op y z)) y)})

; completion result:
; {(x * y) * y * z = y,
;  y * (y * w) * x7 = y * w,
;  (x4 * x * y) * y = x * y}

; ex.
; ((a * b) * (b * c)) * ((b * c) * c) = b * c
(assert-equal "axioms-ikebuchi"
  (rewrite (complete axioms-ikebuchi)
           (op (op (op a b) (op b c)) (op (op b c) c)))
  (op b c))

